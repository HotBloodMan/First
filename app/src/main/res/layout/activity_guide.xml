<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    >
    <VideoView
        android:id="@+id/id_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:fitsSystemWindows="true"
        />
    <LinearLayout
        android:id="@+id/ll_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo1"
            />
        <!--轮播图片-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/iv_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.ljt.fastlivery.widget.CircleIndicator
                android:id="@+id/id_circleIndicator"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                />
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/id_imgEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_guide"
        android:layout_margin="25dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/bt_start"
        />

</RelativeLayout>
